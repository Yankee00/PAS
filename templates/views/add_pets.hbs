</head>

<body>
  <header>
    <h1>OurPets</h1>
  </header>
  <nav>
    <a href="index">Home</a>
    <a href="add_pets">Add Pets</a>
    <a href="Dogs">Dogs</a>
    <a href="Cats">Cats</a>
    <div class="login-register">

      <a href="#" id="logout">Logout</a>
    </div>
  </nav>



  <form action="/add_pets" method="post" enctype="multipart/form-data">
    <h2>Add Pet Form</h2>
    {{!-- user information --}}
    <div class="form-section">
      <h2>User Information</h2>

      <label for="name">Name:</label>
      <input type="text" id="name" name="username" required>

      <label for="email">Email:</label>
      <input type="text" id="name" name="email" required>

      <label for="phone">Phone Number:</label>
      <input type="tel" id="phone" name="phone" placeholder="123-45-678" pattern="[0-9]{10}">

      <label for="phone">Whatsapp No. :</label>
      <input type="tel" id="phone" name="what" placeholder="123-45-678" pattern="[0-9]{10}">
    </div>

    {{!-- pet wali information --}}
    <div class="form-section">
      <h2>Pet Information</h2>

      <label for="petName">Name:</label>
      <input type="text" id="petName" name="petname" required>

      <label for="age">Age:</label>
      <input type="number" id="age" name="petage" required min="0" step="any">

      <select id="unit" name="unit_day_or_month_or_year">
        <option value="years">Year(s)</option>
        <option value="months">Month(s)</option>
        <option value="days">Day(s)</option>
      </select>

      <label for="colour">Color:</label>
      <input type="text" id="colour" name="colour" required>

      <label for="breed">Breed:</label>
      <input type="text" id="breed" name="breed" required>

      <label for="location">Enter your city:</label>
      <input type="text" id="cc" name="city" placeholder="e.g. Ratlam,Indore,Ujjain">

      <label for="location">Enter your state:</label>
      <input type="text" id="ss" name="state" placeholder="e.g. Madhya Pradesh,Tamil Nadu,Ladakh,Himachal Pradesh">

      <label for="type">Type:</label>
      <select id="pettype_dog_or_cat" name="pettype_dog_or_cat" required>
        <option value="">Select a type</option>
        <option value="dog">Dog</option>
        <option value="cat">Cat</option>
      </select>

      <label for="type">Gender:</label>
      <select id="gender" name="gender" required>
        <option value="">Select a type</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>

      <label for="vaccination">is your pet vaccinated:</label>
      <input type="radio" id="vaccination-yes" name="vaccination" value="yes" required>Yes
      <label for="vaccination"></label>
      <input type="radio" id="vaccination-no" name="vaccination" value="no">No

      <br><br>
      <label for="rescue/purchased">Rescue/Purchased:</label>
      <input type="radio" id="rescue" name="pettype_rescued_or_puschase" value="Rescue" required>Rescue
      <label for="rescue"></label>
      <input type="radio" id="purchased" name="pettype_rescued_or_puschase" value="Purchased">Purchased
      <label for="rescue"></label>

      <br>

      <label for="image">Image:</label>
      <input type="file" id="image" name="image" accept="image/*">

      <br>
      <br>
      <br>
      <br>

      <label for="description">Description:</label>
      <textarea id="description" name="description" rows="4" required></textarea>

      <button type="submit">Post pet</button>
    </div>

  </form>
  <footer>
    &copy; 2024 OurPets
  </footer>
  <script>
    // Logout functionality
    document.getElementById("logout").addEventListener("click", function(event) {
      event.preventDefault(); // Prevent the default link behavior

      // Remove items from local storage
      localStorage.removeItem("username");
      localStorage.removeItem("email");

      // Redirect to the login page or any other desired page
      window.location.href = "/login"; // Change "/login" to the desired URL
    });
  </script>
</body>