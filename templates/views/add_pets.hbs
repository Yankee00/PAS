      margin: 0;
      padding: 0;
    }

    header {
      background-color: #333;
      color: white;
      padding: 20px;
    }

    .form-section {
      background-color: #ddd;
      border: 1px solid #666;
      padding: 20px;
      width: 400px;
      margin: 0 auto;
      margin-top: 50px;
    }

    .form-section h2 {
      margin-top: 0;
    }

    form h2 {
      text-align: center;
    }

    label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
    }

    input[type=text],
    input[type=number],
    select,
    textarea {
      padding: 10px;
      width: 100%;
      border: none;
      border-bottom: 1px solid #333;
      margin-bottom: 20px;
    }

    input[type=file] {
      margin-top: 20px;
    }

    button {
      background-color: #333;
      color: white;
      border: none;
      padding: 10px;
      cursor: pointer;
      margin-left: 150px;
    }

    button:hover {
      background-color: #ddd;
      color: black;
    }

    footer {
      background-color: #333;
      color: white;
